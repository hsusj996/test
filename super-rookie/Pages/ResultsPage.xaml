<UserControl x:Class="super_rookie.Pages.ResultsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="시뮬레이션 결과" FontSize="20" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Summary Section -->
                <GroupBox Header="요약 정보" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="총 실행 시간" FontWeight="Bold"/>
                            <TextBlock Text="2시간 30분" FontSize="16" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="처리된 유닛 수" FontWeight="Bold"/>
                            <TextBlock Text="15개" FontSize="16" Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="10">
                            <TextBlock Text="성공률" FontWeight="Bold"/>
                            <TextBlock Text="98.5%" FontSize="16" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Detailed Results -->
                <GroupBox Header="상세 결과" Margin="0,0,0,20">
                    <DataGrid Height="200" IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="유닛 ID" Width="100"/>
                            <DataGridTextColumn Header="상태" Width="100"/>
                            <DataGridTextColumn Header="처리 시간" Width="120"/>
                            <DataGridTextColumn Header="오류 수" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Logs -->
                <GroupBox Header="실행 로그" Margin="0,0,0,20">
                    <ListBox Height="150">
                        <ListBoxItem Content="[10:30:15] 시뮬레이션 시작"/>
                        <ListBoxItem Content="[10:30:20] Unit 1 초기화 완료"/>
                        <ListBoxItem Content="[10:30:25] Unit 2 초기화 완료"/>
                        <ListBoxItem Content="[11:45:30] Unit 1 처리 완료"/>
                        <ListBoxItem Content="[11:50:15] Unit 2 처리 완료"/>
                        <ListBoxItem Content="[12:00:45] 시뮬레이션 완료"/>
                    </ListBox>
                </GroupBox>

                <!-- Charts Placeholder -->
                <GroupBox Header="성능 차트">
                    <Grid Height="200">
                        <TextBlock Text="차트 영역 (나중에 구현)" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Foreground="Gray"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

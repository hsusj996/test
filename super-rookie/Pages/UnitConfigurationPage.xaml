<UserControl x:Class="super_rookie.Pages.UnitConfigurationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="← 뒤로" Command="{Binding DataContext.NavigateBackCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,0,20,0"/>
            <TextBlock Text="{Binding Name, StringFormat={}{0} 설정}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Unit Info -->
            <GroupBox Grid.Column="0" Header="유닛 정보" Margin="0,0,10,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="유닛명:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="유닛 ID:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Text="U001" Width="120" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="설명:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Text="메인 공급 유닛" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="위치:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Text="Zone A-1" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="상태:" Width="80" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="0" Width="120">
                            <ComboBoxItem Content="활성"/>
                            <ComboBoxItem Content="비활성"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="우선순위:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Text="1" Width="120"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Tank Configuration -->
            <GroupBox Grid.Column="1" Header="탱크 구성">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tank Actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="탱크 추가" Command="{Binding DataContext.AddTankToUnitCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}" Margin="0,0,10,0"/>
                        <Button Content="탱크 제거" Command="{Binding DataContext.RemoveTankFromUnitCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding SelectedTank}" Margin="0,0,10,0"/>
                        <Button Content="탱크 복사" Command="{Binding DataContext.CopyTankCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding SelectedTank}" Margin="0,0,10,0"/>
                        <Button Content="탱크 이동" Command="{Binding DataContext.MoveTankCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding SelectedTank}"/>
                    </StackPanel>

                    <!-- Tank List -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding Tanks}" SelectedItem="{Binding SelectedTank}" Margin="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#333" CornerRadius="4" Margin="2" BorderBrush="#666" BorderThickness="1">
                                    <Button Background="#555" BorderThickness="0" Margin="2"
                                            Command="{Binding DataContext.NavigateToTankCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Capacity, StringFormat={}{0}L}" Foreground="LightGray" FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Module Summary -->
                    <GroupBox Grid.Row="2" Header="모듈 구성" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="밸브: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Unit.Tanks.Count}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="센서: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="0" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="펌프: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="0" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="온도조절기: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Bottom Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="저장" Background="#1976D2" Foreground="White" Padding="20,10" Margin="0,0,10,0"/>
            <Button Content="취소"/>
        </StackPanel>
    </Grid>
</UserControl>

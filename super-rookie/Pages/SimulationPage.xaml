<UserControl x:Class="super_rookie.Pages.SimulationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <GroupBox Grid.Row="0" Header="제어 패널" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="시작" Background="#2E7D32" Foreground="White" Padding="20,10" Margin="0,0,10,0"
                            Command="{Binding StartCommand}"/>
                    <Button Content="일시정지" Background="#F57C00" Foreground="White" Padding="20,10" Margin="0,0,10,0"
                            Command="{Binding PauseCommand}"/>
                    <Button Content="정지" Background="#D32F2F" Foreground="White" Padding="20,10" Margin="0,0,10,0"
                            Command="{Binding StopCommand}"/>
                    <Button Content="리셋" Background="#616161" Foreground="White" Padding="20,10"
                            Command="{Binding ResetCommand}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="경과시간: " VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="00:05:23" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tank Visualization -->
            <GroupBox Grid.Column="0" Header="탱크 시각화" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tank Slots -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                        <Grid Margin="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Inlet Valves -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                <Button Width="20" Height="20" Margin="2" Background="#25d366" BorderThickness="0">
                                    <TextBlock Text="In" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                            </StackPanel>
                            
                            <!-- Tank -->
                            <Grid Grid.Row="1" Margin="0,4">
                                <Border Background="#555" CornerRadius="4"/>
                                <Border Background="#2aa1ff" CornerRadius="4" VerticalAlignment="Bottom" Height="60"/>
                                <TextBlock Text="T1" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- Outlet Valves -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                <Button Width="20" Height="20" Margin="2" Background="#666" BorderThickness="0">
                                    <TextBlock Text="Out" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                            </StackPanel>
                            
                            <!-- Level Sensors -->
                            <Border Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,4" 
                                    Width="8" Height="8" CornerRadius="4" Background="#ff4757"/>
                        </Grid>
                    </Border>

                    <!-- Additional tank slots would go here... -->
                </Grid>
            </GroupBox>

            <!-- Status Panel -->
            <GroupBox Grid.Column="1" Header="상태 모니터링">
                <TabControl>
                    <TabItem Header="I/O 상태">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <GroupBox Grid.Row="0" Header="Digital Outputs" Margin="0,0,0,10">
                                <DataGrid ItemsSource="{Binding AvailableDos}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="#333"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="True">
                                                    <Setter Property="Background" Value="#25d366"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="상태" Binding="{Binding State}" Width="60"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>

                            <GroupBox Grid.Row="1" Header="Digital Inputs">
                                <DataGrid ItemsSource="{Binding AvailableDis}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="#333"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="True">
                                                    <Setter Property="Background" Value="#ff4757"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="이름" Binding="{Binding Name}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="상태" Binding="{Binding State}" Width="60"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </Grid>
                    </TabItem>

                    <TabItem Header="로그">
                        <ListBox>
                            <ListBoxItem>
                                <TextBlock Text="14:23:45 - 밸브1 열림" FontFamily="Consolas" FontSize="10"/>
                            </ListBoxItem>
                            <ListBoxItem>
                                <TextBlock Text="14:23:46 - 센서1 트리거" FontFamily="Consolas" FontSize="10"/>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>

                    <TabItem Header="알람">
                        <ListBox>
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠" Foreground="Red" Margin="0,0,5,0"/>
                                    <TextBlock Text="탱크1 레벨 높음"/>
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </GroupBox>
        </Grid>

        <!-- Bottom Status -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="상태: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="실행중" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <TextBlock Text="유닛: " VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBlock Text="1" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>

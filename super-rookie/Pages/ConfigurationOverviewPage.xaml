<UserControl x:Class="super_rookie.Pages.ConfigurationOverviewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="시뮬레이션 설정" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="환경 설정을 완료한 후 시뮬레이션을 시작하세요" 
                       FontSize="14" Foreground="Gray" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Units List -->
            <GroupBox Grid.Column="0" Header="유닛 목록" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Unit Actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="유닛 추가" Command="{Binding AddUnitCommand}" Margin="0,0,10,0"/>
                        <Button Content="템플릿에서 생성" Command="{Binding CreateFromTemplateCommand}" Margin="0,0,10,0"/>
                        <Button Content="설정 가져오기" Command="{Binding ImportSettingsCommand}" Margin="0,0,10,0"/>
                        <Button Content="설정 내보내기" Command="{Binding ExportSettingsCommand}"/>
                    </StackPanel>

                    <!-- Units DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Units}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="유닛명" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="탱크 수" Binding="{Binding Tanks.Count}" Width="80"/>
                            <DataGridTemplateColumn Header="상태" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="✓ 완료" Foreground="Green"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="액션" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="설정" Width="50" Height="25" Margin="2" 
                                                    Command="{Binding DataContext.NavigateToUnitCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="복사" Width="50" Height="25" Margin="2"/>
                                            <Button Content="삭제" Width="50" Height="25" Margin="2" 
                                                    Command="{Binding DataContext.RemoveUnitCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Quick Settings -->
            <GroupBox Grid.Column="1" Header="빠른 설정">
                <StackPanel>
                    <GroupBox Header="기본 설정" Margin="0,0,0,10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="기본 탱크 용량:" Width="100" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding DefaultTankCapacity, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                                <TextBlock Text="L" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="기본 초기량:" Width="100" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding DefaultTankInitialAmount, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                                <TextBlock Text="L" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="스텝 시간:" Width="100" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding StepSeconds, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                                <TextBlock Text="s" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="I/O 설정">
                        <StackPanel>
                            <TextBlock Text="Digital Outputs: 20개" Margin="0,5"/>
                            <TextBlock Text="Digital Inputs: 20개" Margin="0,5"/>
                            <Button Content="I/O 매핑 설정" Command="{Binding IOMappingCommand}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="시뮬레이션 설정" Margin="0,10,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="최대 실행 시간:" Width="100" VerticalAlignment="Center"/>
                                <TextBox Text="60" Width="80"/>
                                <TextBlock Text="분" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            <CheckBox Content="자동 정지" Margin="0,5"/>
                            <CheckBox Content="상세 로깅" Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Bottom Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="시뮬레이션 시작" Background="#2E7D32" Foreground="White" Padding="20,10" Margin="0,0,10,0"
                    Command="{Binding StartSimulationCommand}"/>
            <Button Content="설정 저장" Command="{Binding SaveSettingsCommand}" Margin="0,0,10,0"/>
            <Button Content="설정 불러오기" Command="{Binding LoadSettingsCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>

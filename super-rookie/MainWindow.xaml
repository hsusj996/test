<Window x:Class="super_rookie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:super_rookie.Pages"
        Title="Super Rookie - Tank Simulation" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 탭 네비게이션 -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                BorderBrush="LightGray" 
                BorderThickness="0,0,0,1">
            <TabControl x:Name="MainTabControl" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Margin="10"
                        ItemsSource="{Binding MixingUnits}"
                        SelectedItem="{Binding SelectedMixingUnit}">
                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Background="#F5F5F5" 
                                    BorderBrush="LightGray" 
                                    BorderThickness="0,0,0,1">
                                <TabPanel x:Name="HeaderPanel" 
                                          IsItemsHost="True" 
                                          Panel.ZIndex="1" 
                                          KeyboardNavigation.TabIndex="1"/>
                            </Border>
                            <Border Grid.Row="1" 
                                    Background="White" 
                                    BorderBrush="LightGray" 
                                    BorderThickness="1,0,1,1">
                                <ContentPresenter x:Name="PART_SelectedContentHost" 
                                                Margin="4" 
                                                ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </TabControl.Template>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent" 
                                Padding="20,10" 
                                Margin="2,2,2,0">
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="Bold"/>
                        </Border>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <local:ConfigurationPage/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Border>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <!-- 탭 콘텐츠는 여기에 표시됨 -->
        </Grid>
    </Grid>
</Window>

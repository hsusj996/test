<Window x:Class="super_rookie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:super_rookie.UserControls.Layout"
        Title="Super Rookie - Mixing Unit Control System"
        Width="1400" Height="900"
        WindowState="Maximized"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- MixingUnit 내비바 -->
            <RowDefinition Height="*"/>     <!-- 메인 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- MixingUnit 내비바 -->
        <local:MixingUnitNavBar Grid.Row="0"/>

        <!-- 메인 콘텐츠 -->
        <local:MainContentArea Grid.Row="1"/>
    </Grid>
</Window>
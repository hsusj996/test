<mah:MetroWindow x:Class="super_rookie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:super_rookie"
        xmlns:vm="clr-namespace:super_rookie.ViewModels"
        xmlns:pages="clr-namespace:super_rookie.Pages"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="약액 공급 장치 시뮬레이터" Height="800" Width="1200"
        WindowTransitionsEnabled="True"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <mah:MetroTabControl x:Name="TabControl" Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <mah:MetroTabItem Header="설정" Tag="Configuration">
                <mah:MetroTabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" Margin="0,0,5,0"/>
                            <TextBlock Text="설정"/>
                        </StackPanel>
                    </DataTemplate>
                </mah:MetroTabItem.HeaderTemplate>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="실행" Tag="Simulation">
                <mah:MetroTabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▶️" Margin="0,0,5,0"/>
                            <TextBlock Text="실행"/>
                        </StackPanel>
                    </DataTemplate>
                </mah:MetroTabItem.HeaderTemplate>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="결과" Tag="Results">
                <mah:MetroTabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" Margin="0,0,5,0"/>
                            <TextBlock Text="결과"/>
                        </StackPanel>
                    </DataTemplate>
                </mah:MetroTabItem.HeaderTemplate>
            </mah:MetroTabItem>
        </mah:MetroTabControl>

        <!-- Content Area -->
        <Grid Grid.Row="1" Name="ContentArea">
            <!-- Pages will be dynamically loaded here -->
        </Grid>
    </Grid>
</mah:MetroWindow>

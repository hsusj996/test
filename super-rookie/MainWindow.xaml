<mah:MetroWindow x:Class="super_rookie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:super_rookie"
        xmlns:vm="clr-namespace:super_rookie.ViewModels"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Super Rookie" Height="520" Width="920"
        WindowTransitionsEnabled="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Tank Capacity:" VerticalAlignment="Center"/>
            <TextBox Width="80" Margin="8,0" Text="{Binding TankCapacity, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Initial Amount:" VerticalAlignment="Center"/>
            <TextBox Width="80" Margin="8,0" Text="{Binding TankInitialAmount, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Step (s):" VerticalAlignment="Center"/>
            <TextBox Width="60" Margin="8,0" Text="{Binding StepSeconds, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Start" Margin="8,0" Command="{Binding StartCommand}"/>
            <Button Content="Stop" Margin="8,0" Command="{Binding StopCommand}"/>
        </StackPanel>

        <GroupBox Header="Valves" Grid.Row="1" Margin="0,0,0,8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                    <Button Content="Add Inlet" Command="{Binding AddInletValveCommand}" Margin="0,0,8,0"/>
                    <Button Content="Add Outlet" Command="{Binding AddOutletValveCommand}"/>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Valves}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Direction}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="FlowRate" Binding="{Binding FlowRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridCheckBoxColumn Header="DO" Binding="{Binding DoState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridCheckBoxColumn Header="IsOpen" Binding="{Binding IsOpen, Mode=OneWay}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <GroupBox Header="Sensors" Grid.Row="2" Margin="0,0,0,8">
            <DockPanel>
                <Button Content="Add Sensor" DockPanel.Dock="Top" Command="{Binding AddSensorCommand}" Margin="0,0,0,8"/>
                <DataGrid ItemsSource="{Binding Sensors}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Trigger" Binding="{Binding TriggerAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridCheckBoxColumn Header="IsTriggered" Binding="{Binding IsTriggered, Mode=OneWay}" IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="DI" Binding="{Binding DiState, Mode=OneWay}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <TextBlock Grid.Row="3" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Text="{Binding CurrentAmount, StringFormat=Amount: {0:F2}}"/>
    </Grid>
</mah:MetroWindow>

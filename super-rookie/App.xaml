<Application x:Class="super_rookie.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:super_rookie.Converters"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- 컨버터 리소스 -->
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        <!-- 전역 스타일 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- 전역 색상 -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F5F5F5"/>

        <!-- 전역 데이터 템플릿 -->
        <DataTemplate x:Key="MixingUnitTemplate">
            <Button Content="{Binding Name}" 
                    Background="{StaticResource SecondaryColor}"
                    Foreground="White"
                    Padding="15,8"
                    Margin="2"/>
        </DataTemplate>
    </Application.Resources>
</Application>
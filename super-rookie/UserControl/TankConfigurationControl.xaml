<UserControl x:Class="super_rookie.UserControls.TankConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Add Tank" Command="{Binding DataContext.AddTankToUnitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    CommandParameter="{Binding}" Margin="0,0,8,0"/>
            <Button Content="Remove Unit" Command="{Binding DataContext.RemoveUnitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                    CommandParameter="{Binding}"/>
        </StackPanel>

        <TabControl Grid.Row="1" ItemsSource="{Binding Tanks}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <GroupBox Header="Valves" Margin="0,0,0,8">
                            <DockPanel>
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                                    <Button Content="Add Inlet" Command="{Binding DataContext.AddInletValveToTankCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Margin="0,0,8,0"/>
                                    <Button Content="Add Outlet" Command="{Binding DataContext.AddOutletValveToTankCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                                <DataGrid ItemsSource="{Binding Valves}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Direction}" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="FlowRate" Binding="{Binding FlowRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTemplateColumn Header="DO">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding SelectedDo.Name}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox ItemsSource="{Binding DataContext.AvailableDos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              SelectedItem="{Binding SelectedDo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              DisplayMemberPath="Name"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridCheckBoxColumn Header="IsOpen" Binding="{Binding IsOpen, Mode=OneWay}" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </GroupBox>

                        <GroupBox Header="Sensors">
                            <DockPanel>
                                <Button Content="Add Sensor" DockPanel.Dock="Top" 
                                        Command="{Binding DataContext.AddSensorToTankCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" Margin="0,0,0,8"/>
                                <DataGrid ItemsSource="{Binding Sensors}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Trigger" Binding="{Binding TriggerAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridCheckBoxColumn Header="IsTriggered" Binding="{Binding IsTriggered, Mode=OneWay}" IsReadOnly="True"/>
                                        <DataGridTemplateColumn Header="DI">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding SelectedDi.Name}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox ItemsSource="{Binding DataContext.AvailableDis, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              SelectedItem="{Binding SelectedDi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              DisplayMemberPath="Name"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>

<UserControl x:Class="super_rookie.UserControls.DIOGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Digital Outputs (DO)" Margin="0,0,0,8">
            <DataGrid ItemsSource="{Binding DataContext.AvailableDos, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                      AutoGenerateColumns="False" CanUserAddRows="False" Height="300">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#333"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding State}" Value="True">
                                <Setter Property="Background" Value="#25d366"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                    <DataGridCheckBoxColumn Header="State" Binding="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Digital Inputs (DI)">
            <DataGrid ItemsSource="{Binding DataContext.AvailableDis, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                      AutoGenerateColumns="False" CanUserAddRows="False" Height="300">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#333"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding State}" Value="True">
                                <Setter Property="Background" Value="#ff4757"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                    <DataGridCheckBoxColumn Header="State" Binding="{Binding State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </StackPanel>
</UserControl>

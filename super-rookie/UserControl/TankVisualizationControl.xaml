<UserControl x:Class="super_rookie.UserControls.TankVisualizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:super_rookie.UserControls"
             xmlns:vm="clr-namespace:super_rookie.ViewModels">
    <Border Background="#222" CornerRadius="6" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Unit Tank Visualization" Foreground="White" FontWeight="Bold" Margin="0,0,0,8"/>
            
            <!-- 2x3 그리드로 6등분 -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 탱크 슬롯들 -->
                <Border Grid.Row="0" Grid.Column="0" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                    <Grid>
                        <ContentPresenter Content="{Binding Tanks[0]}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <local:TankSlotTemplate/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBlock Text="Empty" Foreground="#999" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Visibility="{Binding Tanks[0], Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                    <Grid>
                        <ContentPresenter Content="{Binding Tanks[1]}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <local:TankSlotTemplate/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBlock Text="Empty" Foreground="#999" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Visibility="{Binding Tanks[1], Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                    <Grid>
                        <ContentPresenter Content="{Binding Tanks[2]}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <local:TankSlotTemplate/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBlock Text="Empty" Foreground="#999" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Visibility="{Binding Tanks[2], Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                    <Grid>
                        <ContentPresenter Content="{Binding Tanks[3]}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <local:TankSlotTemplate/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBlock Text="Empty" Foreground="#999" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Visibility="{Binding Tanks[3], Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                    <Grid>
                        <ContentPresenter Content="{Binding Tanks[4]}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <local:TankSlotTemplate/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBlock Text="Empty" Foreground="#999" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Visibility="{Binding Tanks[4], Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="2" Background="#333" CornerRadius="4" Margin="4" BorderBrush="#666" BorderThickness="1">
                    <Grid>
                        <ContentPresenter Content="{Binding Tanks[5]}">
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <local:TankSlotTemplate/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBlock Text="Empty" Foreground="#999" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Visibility="{Binding Tanks[5], Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>

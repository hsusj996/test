<UserControl x:Class="super_rookie.UserControls.TankSlotTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Inlet Valves -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
            <ItemsControl ItemsSource="{Binding Valves}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Width="20" Height="20" Margin="2" 
                                Background="{Binding IsOpen, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='#25d366:#666'}"
                                BorderThickness="0" 
                                Command="{Binding DataContext.ToggleValveCommand, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}" 
                                CommandParameter="{Binding}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Direction}" Value="Inlet">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderThickness="0">
                                        <TextBlock Text="{Binding Direction}" FontSize="8" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
        <!-- Tank -->
        <Grid Grid.Row="1" Margin="0,4">
            <Border Background="#555" CornerRadius="4"/>
            <Border Background="#2aa1ff" CornerRadius="4" VerticalAlignment="Bottom">
                <Border.Height>
                    <MultiBinding Converter="{StaticResource LevelToHeightConverter}">
                        <Binding Path="CurrentAmount"/>
                        <Binding Path="Capacity"/>
                    </MultiBinding>
                </Border.Height>
            </Border>
            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Outlet Valves -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
            <ItemsControl ItemsSource="{Binding Valves}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Width="20" Height="20" Margin="2" 
                                Background="{Binding IsOpen, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='#25d366:#666'}"
                                BorderThickness="0" 
                                Command="{Binding DataContext.ToggleValveCommand, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}" 
                                CommandParameter="{Binding}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Direction}" Value="Outlet">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="10" 
                                            BorderThickness="0">
                                        <TextBlock Text="{Binding Direction}" FontSize="8" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
        <!-- Level Sensors -->
        <ItemsControl Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,4">
            <ItemsControl.ItemsSource>
                <Binding Path="Sensors"/>
            </ItemsControl.ItemsSource>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="8" Height="8" CornerRadius="4" Margin="0,2" 
                            Background="{Binding IsTriggered, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='#ff4757:#666'}"
                            VerticalAlignment="Top">
                        <Border.RenderTransform>
                            <TranslateTransform Y="{Binding TriggerAmount, Converter={StaticResource TriggerToHeightConverter}, ConverterParameter='200'}"/>
                        </Border.RenderTransform>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>

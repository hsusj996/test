<UserControl x:Class="super_rookie.UserControls.Test.TestPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:super_rookie.Converters">

    <UserControl.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
    </UserControl.Resources>

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="20,15" 
                CornerRadius="8" 
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="12" Height="12" Fill="#E74C3C" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="밸브 제어 테스트 페이지" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

         <!-- 밸브 제어 영역 -->
         <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
             <ItemsControl ItemsSource="{Binding SelectedMixingUnit.Valves}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" Rows="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Margin="10" 
                                Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 밸브 이름 -->
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2C3E50" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"/>

                                <!-- 밸브 타입 -->
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding Direction, StringFormat='타입: {0}'}" 
                                           FontSize="12" 
                                           Foreground="#7F8C8D" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"/>

                                <!-- 유량 -->
                                <TextBlock Grid.Row="2" 
                                           Text="{Binding FlowRate, StringFormat='유량: {0:F1} L/s'}" 
                                           FontSize="12" 
                                           Foreground="#7F8C8D" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"/>

                                <!-- 상태 표시 -->
                                <Border Grid.Row="3" 
                                        Background="{Binding IsOpen, Converter={StaticResource BooleanToBrushConverter}}" 
                                        CornerRadius="15" 
                                        Padding="10,5" 
                                        Margin="0,0,0,15">
                                    <TextBlock Text="{Binding IsOpen, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='Open|Closed'}" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <!-- 제어 버튼 -->
                                <Button Grid.Row="4" 
                                        Content="{Binding IsOpen, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='Close|Open'}" 
                                        Background="{Binding IsOpen, Converter={StaticResource BooleanToBrushConverter}, ConverterParameter='#E74C3C|#27AE60'}" 
                                        Foreground="White" 
                                        FontWeight="Bold" 
                                        Padding="20,8" 
                                        BorderThickness="0" 
                                        Command="{Binding DataContext.ToggleValveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

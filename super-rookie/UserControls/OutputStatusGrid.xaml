<UserControl x:Class="super_rookie.UserControls.OutputStatusGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <GroupBox Header="Status" 
              FontWeight="Bold" 
              BorderBrush="#BDC3C7">
        <StackPanel Orientation="Horizontal">
            <!-- Digital Outputs -->
            <GroupBox Header="Digital Outputs" 
                      FontWeight="Bold" 
                      Margin="0,0,10,0"
                      BorderBrush="#95A5A6">
                <DataGrid ItemsSource="{Binding DigitalOutputs}"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="80" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Status" Width="200" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </GroupBox>

            <!-- Functions -->
            <GroupBox Header="Functions" 
                      FontWeight="Bold" 
                      Margin="0,0,0,0"
                      BorderBrush="#95A5A6">
                <DataGrid ItemsSource="{Binding Functions}"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="80" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Status" Width="200" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </GroupBox>
        </StackPanel>
    </GroupBox>
</UserControl>
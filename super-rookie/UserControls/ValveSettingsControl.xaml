<UserControl x:Class="super_rookie.UserControls.ValveSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:super_rookie.Models.Module">

    <StackPanel>
        <TextBlock Text="이름:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox Text="{Binding SelectedValve.Name, Mode=OneWay}" 
                 IsReadOnly="True" 
                 Margin="0,0,0,10" 
                 Padding="5"/>
        
        <TextBlock Text="유량 (L/s):" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox Text="{Binding SelectedValve.FlowRate}" 
                 Margin="0,0,0,10" 
                 Padding="5"/>
        
        <TextBlock Text="밸브 타입:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox SelectedValue="{Binding SelectedValve.Direction}"
                  Margin="0,0,0,10"
                  Padding="5">
            <ComboBoxItem Content="입구" Tag="{x:Static local:ValveType.Inlet}"/>
            <ComboBoxItem Content="출구" Tag="{x:Static local:ValveType.Outlet}"/>
        </ComboBox>
        
        <!-- DigitalOutput 연결 섹션 -->
        <TextBlock Text="DigitalOutput 연결:" FontWeight="Bold" Margin="0,20,0,5"/>
        
        <!-- DigitalOutput 선택 -->
        <ComboBox SelectedItem="{Binding SelectedValve.CommandDo}"
                  ItemsSource="{Binding AvailableDigitalOutputs}"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,10"
                  Padding="5"/>
        
        <Button Content="저장" 
                Command="{Binding SaveSettingsCommand}"
                HorizontalAlignment="Stretch" 
                Margin="0,20,0,0" 
                Padding="10,5"/>
    </StackPanel>
</UserControl>

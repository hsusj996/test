<UserControl x:Class="super_rookie.UserControls.MainContentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:super_rookie.UserControls">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 페이지 탭 -->
            <RowDefinition Height="*"/>
            <!-- 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- 페이지 탭 -->
        <TabControl Grid.Row="1" 
                   Background="White" 
                   BorderThickness="0">
            <TabItem Header="Module Configuration" 
                     FontSize="14" 
                     FontWeight="Bold"
                     Padding="20,10">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Module Configuration" 
                                   Foreground="#2C3E50"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <!-- Module Configuration 콘텐츠 -->
                <local:ModuleConfigurationPanel/>
            </TabItem>
            <TabItem Header="Status Monitoring" 
                     FontSize="14" 
                     FontWeight="Bold"
                     Padding="20,10">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Status Monitoring" 
                                   Foreground="#2C3E50"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <!-- Status Monitoring 콘텐츠 -->
                <local:StatusMonitoringPanel/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
    <UserControl x:Class="super_rookie.UserControls.Settings.ValveSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:module="clr-namespace:super_rookie.Models.Module">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="Valve Settings" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       Margin="0,0,0,15"/>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Flow Rate:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FlowRate}" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Direction:" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" SelectedValue="{Binding Direction}" SelectedValuePath="Tag" Margin="5">
                    <ComboBoxItem Content="Inlet" Tag="{x:Static module:ValveType.Inlet}"/>
                    <ComboBoxItem Content="Outlet" Tag="{x:Static module:ValveType.Outlet}"/>
                </ComboBox>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Command DO:" VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox x:Name="CommandDoComboBox" Grid.Row="3" Grid.Column="1" SelectedItem="{Binding CommandDo}" Margin="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>

    <UserControl x:Class="super_rookie.UserControls.Settings.TankSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="Tank Settings" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       Margin="0,0,0,15"/>
            
            <!-- 기본 설정 -->
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Capacity:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Capacity}" Margin="5"/>
            </Grid>

            <!-- 연결된 밸브 관리 -->
            <TextBlock Text="Connected Valves" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       Margin="0,0,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- 사용 가능한 밸브 목록 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Available Valves" 
                               FontSize="12" 
                               FontWeight="SemiBold" 
                               Foreground="#7F8C8D" 
                               Margin="0,0,0,5"/>
                    <ListBox x:Name="AvailableValvesListBox"
                             DisplayMemberPath="Name"
                             Height="200"
                             SelectionMode="Single">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="5,2"/>
                                <Setter Property="Margin" Value="0,1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>

                <!-- 버튼들 -->
                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                    <Button Content="→" 
                            Width="30" 
                            Height="30" 
                            Margin="0,5" 
                            Click="AddValve_Click"
                            ToolTip="Add Valve to Tank"/>
                    <Button Content="←" 
                            Width="30" 
                            Height="30" 
                            Margin="0,5" 
                            Click="RemoveValve_Click"
                            ToolTip="Remove Valve from Tank"/>
                </StackPanel>

                <!-- 연결된 밸브 목록 -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="Connected Valves" 
                               FontSize="12" 
                               FontWeight="SemiBold" 
                               Foreground="#7F8C8D" 
                               Margin="0,0,0,5"/>
                    <ListBox x:Name="ConnectedValvesListBox"
                             ItemsSource="{Binding Valves}"
                             DisplayMemberPath="Name"
                             Height="200"
                             SelectionMode="Single">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="5,2"/>
                                <Setter Property="Margin" Value="0,1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>

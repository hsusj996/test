    <UserControl x:Class="super_rookie.UserControls.Layout.MainContentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:super_rookie.UserControls.Layout"
        xmlns:monitoring="clr-namespace:super_rookie.UserControls.Monitoring"
        xmlns:settings="clr-namespace:super_rookie.UserControls.Settings"
        xmlns:test="clr-namespace:super_rookie.UserControls.Test">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 페이지 탭 -->
            <RowDefinition Height="*"/>
            <!-- 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- 페이지 탭 -->
        <TabControl Grid.Row="1" 
                   Background="White" 
                   BorderThickness="0">
            <TabItem Header="Status Monitoring" 
                     FontSize="14" 
                     FontWeight="Bold"
                     Padding="20,10">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Status Monitoring" 
                                   Foreground="#2C3E50"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <!-- Status Monitoring 콘텐츠 -->
                <monitoring:StatusMonitoringPanel/>
            </TabItem>
            <TabItem Header="Module Configuration" 
                     FontSize="14" 
                     FontWeight="Bold"
                     Padding="20,10">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Module Configuration" 
                                   Foreground="#2C3E50"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <!-- Module Configuration 콘텐츠 -->
                <settings:ModuleConfigurationPanel/>
            </TabItem>
            <TabItem Header="Sequence Monitoring" 
                     FontSize="14" 
                     FontWeight="Bold"
                     Padding="20,10">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Sequence Monitoring" 
                                   Foreground="#2C3E50"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <!-- Sequence Monitoring 콘텐츠 -->
                <monitoring:SequenceMonitoringPanel/>
            </TabItem>
            <TabItem Header="Test" 
                     FontSize="14" 
                     FontWeight="Bold"
                     Padding="20,10">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="Test" 
                                   Foreground="#2C3E50"/>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <!-- Test 콘텐츠 -->
                <test:TestPanel/>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
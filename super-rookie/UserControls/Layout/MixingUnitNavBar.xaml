    <UserControl x:Class="super_rookie.UserControls.Layout.MixingUnitNavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:super_rookie.Converters"
             Height="80">

    <UserControl.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        
        <!-- 푸른 계열 리본 버튼 -->
        <Style x:Key="RibbonButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="MinWidth" Value="65"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 푸른 계열 액션 버튼 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource RibbonButtonStyle}">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
        
        <!-- 푸른 계열 위험 버튼 -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource RibbonButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
        
        <!-- 푸른 계열 그룹 헤더 -->
        <Style x:Key="GroupHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#4A90E2"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#4A90E2" BorderThickness="0,0,0,2">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#E8F4FD" Offset="0"/>
                <GradientStop Color="#D6EAF8" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- 로고/제목 -->
                <ColumnDefinition Width="*"/>     <!-- 리본 메뉴 -->
                <ColumnDefinition Width="Auto"/>  <!-- Mixing Unit 선택 -->
            </Grid.ColumnDefinitions>
            
            <!-- 로고/제목 -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#4A90E2" 
                    BorderThickness="1,1,0,1" 
                    CornerRadius="4,0,0,4"
                    Margin="8,4,0,4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,8">
                    <Ellipse Width="18" Height="18" Fill="#4A90E2" Margin="0,0,8,0"/>
                    <TextBlock Text="Super Rookie" 
                               Foreground="#2C3E50" 
                               FontSize="13" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- 리본 메뉴 -->
            <ScrollViewer Grid.Column="1" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Disabled"
                          Margin="0,4">
                <StackPanel Orientation="Horizontal">
                    
                    <!-- 시뮬레이션 그룹 -->
                    <Border Background="White" 
                            BorderBrush="#4A90E2" 
                            BorderThickness="1,1,0,1" 
                            CornerRadius="0"
                            Margin="0,0,0,0">
                        <StackPanel Margin="12,6">
                            <TextBlock Text="시뮬레이션" Style="{StaticResource GroupHeaderStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="시작" 
                                        Command="{Binding StartCommand}"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                <Button Content="정지" 
                                        Command="{Binding StopCommand}"
                                        Style="{StaticResource DangerButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 제어 그룹 -->
                    <Border Background="White" 
                            BorderBrush="#4A90E2" 
                            BorderThickness="1,1,0,1" 
                            CornerRadius="0"
                            Margin="0,0,0,0">
                        <StackPanel Margin="12,6">
                            <TextBlock Text="제어" Style="{StaticResource GroupHeaderStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="설정" 
                                        Command="{Binding SettingsCommand}"
                                        Style="{StaticResource RibbonButtonStyle}"/>
                                <Button Content="모니터링" 
                                        Style="{StaticResource RibbonButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 도구 그룹 -->
                    <Border Background="White" 
                            BorderBrush="#4A90E2" 
                            BorderThickness="1,1,0,1" 
                            CornerRadius="0"
                            Margin="0,0,0,0">
                        <StackPanel Margin="12,6">
                            <TextBlock Text="도구" Style="{StaticResource GroupHeaderStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="도움말" 
                                        Command="{Binding HelpCommand}"
                                        Style="{StaticResource RibbonButtonStyle}"/>
                                <Button Content="로그" 
                                        Style="{StaticResource RibbonButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 상태 그룹 -->
                    <Border Background="White" 
                            BorderBrush="#4A90E2" 
                            BorderThickness="1,1,0,1" 
                            CornerRadius="0"
                            Margin="0,0,0,0">
                        <StackPanel Margin="12,6">
                            <TextBlock Text="상태" Style="{StaticResource GroupHeaderStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="새로고침" 
                                        Style="{StaticResource RibbonButtonStyle}"/>
                                <Button Content="통계" 
                                        Style="{StaticResource RibbonButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Mixing Unit 선택 -->
            <Border Grid.Column="2" 
                    Background="White" 
                    BorderBrush="#4A90E2" 
                    BorderThickness="1,1,1,1" 
                    CornerRadius="0,4,4,0"
                    Margin="0,4,8,4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,8">
                    <TextBlock Text="Mixing Unit:" 
                               Foreground="#2C3E50" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding MixingUnits}"
                              SelectedItem="{Binding SelectedMixingUnit}"
                              DisplayMemberPath="Name"
                              Width="140"
                              Height="24"
                              Background="White"
                              Foreground="#2C3E50"
                              FontSize="11"
                              BorderBrush="#4A90E2"
                              BorderThickness="1"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
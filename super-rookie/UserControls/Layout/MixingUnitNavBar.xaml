    <UserControl x:Class="super_rookie.UserControls.Layout.MixingUnitNavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:super_rookie.Converters"
             Height="60">

    <UserControl.Resources>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
    </UserControl.Resources>

    <Border Background="#2C3E50" Padding="10,5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Mixing Unit 드롭다운 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Mixing Unit:" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding MixingUnits}"
                          SelectedItem="{Binding SelectedMixingUnit}"
                          DisplayMemberPath="Name"
                          Width="150"
                          Height="30"
                          Background="White"
                          Foreground="Black"/>
            </StackPanel>
            
            <!-- 리본 메뉴 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="시작" 
                        Command="{Binding StartCommand}"
                        Background="#3498DB" 
                        Foreground="White" 
                        Padding="15,8" 
                        Margin="5,0" 
                        BorderThickness="0"
                        FontWeight="Bold"
                        Height="35"/>
                <Button Content="정지" 
                        Command="{Binding StopCommand}"
                        Background="#E74C3C" 
                        Foreground="White" 
                        Padding="15,8" 
                        Margin="5,0" 
                        BorderThickness="0"
                        FontWeight="Bold"
                        Height="35"/>
                <Button Content="설정" 
                        Command="{Binding SettingsCommand}"
                        Background="#9B59B6" 
                        Foreground="White" 
                        Padding="15,8" 
                        Margin="5,0" 
                        BorderThickness="0"
                        FontWeight="Bold"
                        Height="35"/>
                <Button Content="도움말" 
                        Command="{Binding HelpCommand}"
                        Background="#F39C12" 
                        Foreground="White" 
                        Padding="15,8" 
                        Margin="5,0" 
                        BorderThickness="0"
                        FontWeight="Bold"
                        Height="35"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
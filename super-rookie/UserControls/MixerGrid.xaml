<UserControl x:Class="super_rookie.UserControls.MixerGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <GroupBox BorderBrush="#BDC3C7">
        <GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mixers" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1" 
                        Content="+" 
                        Width="25" 
                        Height="25" 
                        FontSize="16" 
                        FontWeight="Bold"
                        Background="#9B59B6" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Margin="10,0,0,0"
                        Click="AddMixer_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="12.5" 
                                                Padding="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8E44AD"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </GroupBox.Header>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <DataGrid x:Name="DataGrid"
                      ItemsSource="{Binding Mixers}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                      GridLinesVisibility="None"
                      HeadersVisibility="None"
                      Background="Transparent"
                      RowHeight="80"
                      SelectionMode="Single"
                      SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- 카드 형태의 행 -->
                            <Border Background="White" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Margin="5,2" 
                                    Padding="15,10">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" 
                                                    Direction="270" 
                                                    ShadowDepth="1" 
                                                    Opacity="0.2" 
                                                    BlurRadius="3"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 모듈 아이콘/상태 -->
                                    <Border Grid.Column="0" 
                                            Background="#9B59B6" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="0,0,15,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="MIXER" 
                                                   FontSize="10" 
                                                   FontWeight="Bold" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- 모듈 이름 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Foreground="#2C3E50" 
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- 삭제 버튼 -->
                                    <Button Grid.Column="2" 
                                            Content="×" 
                                            FontSize="18" 
                                            FontWeight="Bold" 
                                            Foreground="#E74C3C" 
                                            Background="Transparent" 
                                            BorderThickness="0" 
                                            Width="30" 
                                            Height="30" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Click="DeleteMixer_Click"
                                            Tag="{Binding}"
                                            ToolTip="Delete Mixer">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="15" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FFE6E6"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background" Value="#FFCCCC"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            </DataGrid>
        </ScrollViewer>
    </GroupBox>
</UserControl>
    <UserControl x:Class="super_rookie.UserControls.Monitoring.ValveMonitoringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#FDF2E9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Valve 영역 헤더 -->
        <Border Grid.Row="0" 
                Background="#E67E22" 
                Padding="15,8">
            <TextBlock Text="Valve Modules" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Valve 영역 콘텐츠 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      Margin="10">
            <ItemsControl ItemsSource="{Binding Valves}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 개별 Valve 영역 -->
                        <Border Background="White" 
                                BorderBrush="#E67E22" 
                                BorderThickness="2" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="10"
                                Width="150"
                                VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Valve 제목 -->
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding Name}" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="#E67E22" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- Valve 상태 -->
                                <Border Grid.Row="1" 
                                        Background="#FFF3E0" 
                                        BorderBrush="#E67E22" 
                                        BorderThickness="1" 
                                        CornerRadius="3" 
                                        Margin="5">
                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <Ellipse Width="20" 
                                                 Height="20" 
                                                 Fill="#E67E22" 
                                                 Margin="0,0,0,5"/>
                                        <TextBlock Text="Valve" 
                                                   FontSize="10" 
                                                   Foreground="#E67E22"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

    <UserControl x:Class="super_rookie.UserControls.Monitoring.SequenceMonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:super_rookie.UserControls.Monitoring">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 헤더 -->
            <RowDefinition Height="*"/>
            <!-- 메인 콘텐츠 -->
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sequence Monitoring" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock Text="시퀀스 모니터링" 
                           FontSize="14" 
                           Foreground="#BDC3C7" 
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 상태 표시 영역 -->

            <!-- 3개 영역으로 나눈 모니터링 콘텐츠 -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <!-- Tank 영역 (가장 큰 영역) -->
                    <RowDefinition Height="1*"/>
                    <!-- Valve 영역 (높이 증가) -->
                    <!-- 나머지 모듈 영역 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <!-- Tank와 Valve 영역 (70%) -->
                    <ColumnDefinition Width="20"/>
                    <!-- 구분선 -->
                    <ColumnDefinition Width="3*"/>
                    <!-- 나머지 모듈 영역 (30%) -->
                </Grid.ColumnDefinitions>

                <!-- 1. Tank 모듈 영역 (가장 큰 영역) -->
                <Border Grid.Row="0" 
                        Grid.Column="0"
                        BorderBrush="#3498DB" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,0,0,10">
                    <local:TankMonitoringControl x:Name="TankMonitoringControl" 
                                                 DataContext="{Binding SelectedMixingUnit}"/>
                </Border>

                <!-- 2. Valve 모듈 영역 (Tank 아래, 가로로 길게) -->
                <Border Grid.Row="1" 
                        Grid.Column="0"
                        BorderBrush="#E67E22" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Margin="0,0,0,10">
                    <local:ValveMonitoringControl DataContext="{Binding SelectedMixingUnit}"/>
                </Border>

                <!-- 3. 나머지 모듈 영역 (우측) - 3개 모듈로 균등 분배 -->
                <Grid Grid.Row="0" 
                      Grid.RowSpan="2"
                      Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Heater 모듈 영역 -->
                    <Border Grid.Row="0" 
                            BorderBrush="#E74C3C" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Margin="0,0,0,5">
                        <local:HeaterMonitoringControl DataContext="{Binding SelectedMixingUnit}"/>
                    </Border>

                    <!-- Mixer 모듈 영역 -->
                    <Border Grid.Row="1" 
                            BorderBrush="#27AE60" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Margin="0,2.5,0,2.5">
                        <local:MixerMonitoringControl DataContext="{Binding SelectedMixingUnit}"/>
                    </Border>

                    <!-- Pump 모듈 영역 -->
                    <Border Grid.Row="2" 
                            BorderBrush="#3498DB" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Margin="0,5,0,0">
                        <local:PumpMonitoringControl DataContext="{Binding SelectedMixingUnit}"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

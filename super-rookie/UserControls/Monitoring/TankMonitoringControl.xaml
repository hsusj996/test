    <UserControl x:Class="super_rookie.UserControls.Monitoring.TankMonitoringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#E8F4FD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Tank 영역 헤더 -->
        <Border Grid.Row="0" 
                Background="#3498DB" 
                Padding="15,10">
            <TextBlock Text="Tank Modules" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- 탱크 개수만큼 영역을 나누는 콘텐츠 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      Margin="10">
            <ItemsControl ItemsSource="{Binding Tanks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 개별 탱크 영역 (표 형태) -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="15"
                                Width="300"
                                VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 탱크 제목 -->
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2C3E50" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"/>
                                
                                <!-- 용량 정보 -->
                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="용량:" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Capacity, StringFormat={}{0:F1}L}" 
                                               FontSize="12" 
                                               Foreground="#2C3E50" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 현재량 정보 -->
                                <Grid Grid.Row="2" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="현재량:" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Amount, StringFormat={}{0:F1}L}" 
                                               FontSize="12" 
                                               Foreground="#2C3E50" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 레벨 표시 (퍼센트) -->
                                <Grid Grid.Row="3" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="레벨:" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Amount, StringFormat={}{0:P0}}" 
                                               FontSize="12" 
                                               Foreground="#E74C3C" 
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 연결된 밸브 목록 -->
                                <Grid Grid.Row="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 밸브 헤더 -->
                                    <TextBlock Grid.Row="0" 
                                               Text="연결된 밸브:" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               Margin="0,0,0,5"/>
                                    
                                    <!-- 밸브 목록 -->
                                    <ItemsControl Grid.Row="1" 
                                                  ItemsSource="{Binding Valves}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8F9FA" 
                                                        BorderBrush="#BDC3C7" 
                                                        BorderThickness="1" 
                                                        CornerRadius="3" 
                                                        Margin="2" 
                                                        Padding="5,2">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="9" 
                                                               Foreground="#2C3E50"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

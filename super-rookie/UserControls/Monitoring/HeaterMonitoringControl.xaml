    <UserControl x:Class="super_rookie.UserControls.Monitoring.HeaterMonitoringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#FFE8E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Heater 영역 헤더 -->
        <Border Grid.Row="0" 
                Background="#E74C3C" 
                Padding="15,10">
            <TextBlock Text="Heater Modules" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- 히터 개수만큼 영역을 나누는 콘텐츠 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      Margin="10">
            <ItemsControl ItemsSource="{Binding Heaters}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 개별 히터 영역 (표 형태) -->
                        <Border Background="White" 
                                BorderBrush="#BDC3C7" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="15"
                                Width="300"
                                VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 히터 제목 -->
                                <TextBlock Grid.Row="0" 
                                           Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#2C3E50" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"/>
                                
                                <!-- 제어 출력 상태 -->
                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="제어:" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding ControlOutput.Status, StringFormat={}{0:켜짐/꺼짐}}" 
                                               FontSize="12" 
                                               Foreground="#2C3E50" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 상태 입력 -->
                                <Grid Grid.Row="2" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="상태:" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding StatusInput.Status, StringFormat={}{0:켜짐/꺼짐}}" 
                                               FontSize="12" 
                                               Foreground="#E74C3C" 
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 상태 표시 -->
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- 상태 헤더 -->
                                    <TextBlock Grid.Row="0" 
                                               Text="상태 표시:" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="#7F8C8D" 
                                               Margin="0,0,0,5"/>
                                    
                                    <!-- 상태 표시 -->
                                    <Border Grid.Row="1" 
                                            Background="{Binding StatusInput.Status, Converter={StaticResource BooleanToBrushConverter}}" 
                                            BorderBrush="#E74C3C" 
                                            BorderThickness="1" 
                                            CornerRadius="3" 
                                            Margin="2" 
                                            Padding="5,2">
                                        <TextBlock Text="{Binding StatusInput.Status, StringFormat={}{0:켜짐/꺼짐}}" 
                                                   FontSize="9" 
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

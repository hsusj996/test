    <UserControl x:Class="super_rookie.UserControls.Monitoring.StatusMonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:super_rookie.UserControls.Monitoring"
        xmlns:status="clr-namespace:super_rookie.UserControls.Status">

    <Grid Background="White" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 헤더 -->
            <RowDefinition Height="*"/>
            <!-- 상태 그리드들 -->
        </Grid.RowDefinitions>

        <!-- Status 헤더 -->
        <Border Grid.Row="0" Background="#ECF0F1" Padding="15,10">
            <TextBlock Text="Status Monitoring" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"/>
        </Border>

        <!-- 상태 그리드들 -->
        <StackPanel Grid.Row="1" Margin="15" Orientation="Horizontal" HorizontalAlignment="Left">
            <!-- Input 그리드들 -->
            <status:InputStatusGrid DataContext="{Binding SelectedMixingUnit}" Margin="0,0,15,0"/>

            <!-- Status 그리드들 -->
            <status:OutputStatusGrid DataContext="{Binding SelectedMixingUnit}" Margin="0,0,15,0"/>
        </StackPanel>
    </Grid>
</UserControl>
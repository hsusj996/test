<UserControl x:Class="super_rookie.UserControls.ModuleConfigurationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:super_rookie.UserControls">

    <Grid Background="White" Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- 모듈 그리드들 -->
            <ColumnDefinition Width="20"/>
            <!-- 구분선 -->
            <ColumnDefinition Width="0.3*"/>
            <!-- 설정 패널 -->
        </Grid.ColumnDefinitions>

        <!-- 구분선 -->
        <Border Grid.Column="1" Background="#BDC3C7" Width="2"/>

        <!-- 모듈 그리드들 -->
        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Disabled" 
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="15" 
                        Orientation="Horizontal">
                <!-- Tanks 그리드 -->
                <local:TankGrid Width="300" 
                                Margin="0,0,15,0" 
                                DataContext="{Binding SelectedMixingUnit}"/>

                <!-- Valves 그리드 -->
                <local:ValveGrid Width="300" 
                                 Margin="0,0,15,0" 
                                 DataContext="{Binding SelectedMixingUnit}"/>

                <!-- Heaters 그리드 -->
                <local:HeaterGrid Width="300" 
                                  Margin="0,0,15,0" 
                                  DataContext="{Binding SelectedMixingUnit}"/>

                <!-- Mixers 그리드 -->
                <local:MixerGrid Width="300" 
                                 Margin="0,0,15,0" 
                                 DataContext="{Binding SelectedMixingUnit}"/>

                <!-- Pumps 그리드 -->
                <local:PumpGrid Width="300" 
                                Margin="0,0,15,0" 
                                DataContext="{Binding SelectedMixingUnit}"/>

                <!-- Level Sensors 그리드 -->
                <local:LevelSensorGrid Width="300" 
                                       Margin="0,0,15,0" 
                                       DataContext="{Binding SelectedMixingUnit}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 우측 설정 패널 -->
        <local:SettingsPanel Grid.Column="2" DataContext="{Binding SelectedMixingUnit}"/>
    </Grid>
</UserControl>